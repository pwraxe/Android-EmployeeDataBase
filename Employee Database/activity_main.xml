<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="@string/id"
                android:layout_marginTop="10sp"/>

            <EditText
                android:id="@+id/edit_emp_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/idHint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text="@string/fname"
                android:layout_marginTop="10sp" />

                <EditText
                android:id="@+id/edit_fname_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/fnameHint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="@string/lname"
                android:layout_marginTop="10sp"/>

            <EditText
                android:id="@+id/edit_lname_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/lnameHint"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="@string/email"
                android:layout_marginTop="10sp" />

            <EditText
                android:id="@+id/edit_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="@string/emailHint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="@string/mobile"
                android:layout_marginTop="10sp" />
            <EditText
                android:id="@+id/edit_mobile_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/mobileHint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="@string/dept"
                android:layout_marginTop="10sp" />
            <EditText
                android:id="@+id/edit_dept_id"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:hint="@string/deptHint" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="@string/salary"
                android:layout_marginTop="10sp" />

            <EditText
                android:id="@+id/edit_salary_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/salaryHint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="@string/city"
                android:layout_marginTop="10sp" />

            <EditText
                android:id="@+id/edit_city_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/cityHint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="@string/experience"
                android:layout_marginTop="10sp" />

            <EditText
                android:id="@+id/edit_experience"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/experienceHint" />

            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:layout_marginTop="25sp"
                android:textSize="30sp"
                android:background="@color/colorPrimaryDark"
                />

            <Button
                android:id="@+id/getData_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/getData"
                android:layout_marginTop="25sp"
                android:textSize="30sp"
                android:layout_marginBottom="15dp"
                android:background="@color/colorPrimaryDark"
                />
            <Button
                android:id="@+id/update_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/update"
                android:layout_marginTop="15sp"
                android:textSize="30sp"
                android:layout_marginBottom="15dp"
                android:background="@color/colorPrimaryDark"
                />
            <Button
                android:id="@+id/delete_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:layout_marginTop="15sp"
                android:textSize="30sp"
                android:layout_marginBottom="15dp"
                android:background="@color/colorPrimaryDark"
                />




    </LinearLayout>

</ScrollView>